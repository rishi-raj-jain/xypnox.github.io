---
import { themeVars } from "../theme";
import { flattenObject } from "../lib/objects";
import Navbar from "../components/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const themeCssVars = flattenObject(themeVars, (keys, value) => [
  `${keys.join("-")}`,
  value,
]);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,300;0,400;0,600;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
    <Navbar />
  </body>
</html>
<style is:global define:vars={themeCssVars}>
  html {
    font-family: var(--font-family);
    color: var(--text);
    background-color: var(--background);
  }

  body {
    margin: 0;
  }

  a {
    color: var(--primary-color);
  }
</style>
