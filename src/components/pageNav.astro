---
import NavLink from './NavLink.astro'
interface Props {
  links: {
    name: string;
    slug: string;
  }[];
}

const {links} = Astro.props
---

<nav class="page-nav">
  {
    links.map((link) => (
      <NavLink href={`#${link.slug}`}>
        {link.name}
      </NavLink>
    ))
  }
</nav>

<style>
  .page-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin: 2rem 0;
    gap: 1rem;
  }
</style>
