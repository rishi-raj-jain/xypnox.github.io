<style>
  nav.navbar {
    position: fixed;
    bottom: 0.5rem;
    left: 1rem;
    right: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem 2rem;
    background-color: var(--surface);
    width: max-content;
    margin: 0 auto;
    gap: 1rem;
    border-radius: 1rem;
