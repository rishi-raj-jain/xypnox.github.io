---
import { links } from "../content/navLinks";
import { Icon } from "astro-icon";
---

<nav class="navbar">
  <a href="/" class="navLink">
    <Icon name="solar:home-smile-bold-duotone" />
  </a>
  {
    links.map((link) => (
      <a href={link.url} class="navLink">
        <Icon name={link.icon} size="1.5rem" style="margin-left: 0.5rem;" />
        {link.name}
      </a>
    ))
  }
</nav>

<style>
  .navbar {
    background-color: var(--surface);
    backdrop-filter: blur(20px);
    height: max-content;
    width: max-content;
    max-width: 100%;
    position: fixed;
    z-index: 100;

    /* Align in center */
    left: 50%;
    transform: translateX(-50%);
    /* At the bottom */
    bottom: 2rem;

    border-radius: 1rem;

    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
    overflow: hidden;

    transition: transform 0.2s ease-in-out;
  }

  .navbar:hover {
    transform: translateX(-50%) scale(1.1);
  }

  .navLink {
    display: flex;
    align-items: center;
    color: var(--fadeText);
    text-decoration: none;
    padding: 1rem;
    gap: 0.5rem;
  }

  .navLink:hover {
    color: var(--primary);
    background-color: var(--hoverSurface);
  }
</style>
