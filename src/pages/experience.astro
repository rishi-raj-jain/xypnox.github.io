---
import Layout from "../layouts/Layout.astro";
import { experiences } from "../content/experience";
import { Icon } from "astro-icon";
---

<Layout title="Experience">
  <main>
    <h1 class="pageTitle">Experience</h1>
    <div class="experiences">
      {
        experiences.map((experience, index) => (
          <div class={"experience " + (index % 2 == 0 ? "left" : "right")}>
            <div class="details">
              <h1>{experience.name}</h1>
              {experience.tag && (
                <div>
                  <Icon name={experience.tag.icon} />
                  {experience.tag.name}
                </div>
              )}
              <p>{experience.description}</p>
            </div>
            <div>
              <img src={experience.graphic} alt={experience.name} />
            </div>
          </div>
        ))
      }
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4rem;
    padding: 0.5rem;
    max-width: 800px;
    margin-top: 4rem;
  }

  .experiences {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    width: 100%;
  }

  .experience {
    display: flex;
    gap: 1rem;
    width: 100%;
  }

  .experience.left {
    flex-direction: row-reverse;
  }
  .experience.right {
    flex-direction: row;
  }

  .details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 400px;
  }
</style>
