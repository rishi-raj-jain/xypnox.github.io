---
import Layout from "../layouts/Layout.astro";
import { HoverLogo } from "../components/hoverLogo";
import Links from "../components/profileLinks.astro";
---

<Layout title="xypnox">
  <main>
    <HoverLogo client:load />
    <div class="introduction">
      <h1>Hi, I am xypnox!</h1>
      <p>I like to code, design, write.</p>
      <p>This here is my personal website.</p>
    </div>
    <Links />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4rem;
    padding: 1.5rem;
    max-width: 80ch;
    margin-top: 4rem;
  }

  .introduction {
    font-size: 2rem;
    line-height: 1.5;
    text-align: left;
  }

  .introduction h1 {
    font-size: 4rem;
    margin: 0;
    font-weight: normal;
  }

</style>
